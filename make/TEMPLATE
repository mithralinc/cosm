## OS        : generic UNIX
## CPU       : unknown
## Compiler  : GNU

CC      = gcc
CXX     = g++
FC      = g77
LD      = gcc -o 
DYLIB   = gcc -shared -o 
AR      = ar rc 
RM      = rm -f
RNLIB   = ranlib
STRIP   = strip
INSTALL = install
OBJ     = o

# a good set of defaults
CCFLAGS = -O2 -fPIC -Wall -pedantic -Wno-long-long $(EXTRA_FLAGS)
FCFLAGS = -O2 -fPIC -Wall -pedantic -Wno-long-long $(EXTRA_FLAGS)
LDFLAGS = 
LDLIBS  = -lm -lpthread $(EXTRA_LIBS)

# Cosm Defines
COSM_DEFS = -DOS_TYPE=OS_INVALID -DCPU_TYPE=CPU_INVALID

.c.$(OBJ):
	@echo "Compiling $<"
	@$(CC) $(CC_FLAGS) $(COSM_DEFS) -o $@ -c $<

.cpp.$(OBJ):
	@echo "Compiling $<"
	@$(CXX) $(CC_FLAGS) $(COSM_DEFS) -o $@ -c $<

